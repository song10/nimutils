rule nimc
  command = nim c -o:$out $in

rule nimr
  command = nim c -r -o:$out $in

rule nimble_test
  command = nimble test

rule nimpretty
  command = find . -name '*.nim' -exec nimpretty {} \;

build bin/nu: nimc src/nimutils.nim | src/nimutilspkg/lib/path.nim src/nimutilspkg/lib/hosts.nim
build nu: phony bin/nu
build test: nimble_test
build pretty: nimpretty

default nu
